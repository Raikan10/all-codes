#include "iostream"
using namespace std;
int main()
{
    int a[50],b[50],n,c[51],i;
    cout<<"Enter the no.of bits you want to enter"<<endl;
    cin>>n;
    cout<<"Enter the first value"<<endl;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    cout<<"Enter the second value"<<endl;
    for(i=0;i<n;i++)
    {
        cin>>b[i];
    }
    c[0]=0;
    for(i=n;i>=0;i--)
    {
        c[i+1]=a[i]+b[i];
        while(c[i+1]==2)
        {
            c[i+1]=0;
            c[i]+=1;
        }
    }
    cout<<"The sum:"<<endl;
    for(i=0;i<n+1;i++)
    {
        cout<<c[i]<<" ";
    }
}

